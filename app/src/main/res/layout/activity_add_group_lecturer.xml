<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    android:id="@+id/glayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Log Out"
        android:gravity="center"
        android:id="@+id/logout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Conversation"
        android:textStyle="bold"
        android:background="@drawable/convo_heading"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/logout1"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:id="@+id/heading1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of Group:"
        android:id="@+id/groupName"
        android:layout_below="@+id/heading1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupNameInput"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/createGroupButton"
        android:layout_alignStart="@+id/createGroupButton"
        android:layout_alignRight="@+id/createGroupButton"
        android:layout_alignEnd="@+id/createGroupButton" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:id="@+id/createGroupButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/tv"
        android:textSize="30dp"
        android:layout_below="@+id/groupName"
        android:paddingTop="60dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>